@page "/orders"
@using LuseGateway.Core.Models
@using LuseGateway.Core.Services
@inject IOrderService OrderService
@inject IOrderReconciliationService ReconService

<PageTitle>Orders | LUSE FIX Gateway</PageTitle>

<div class="fade-in">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Order Management</h1>
        <button class="btn-glass btn-primary-glass" @onclick="ReconcileAll">
            <span class="btn-icon">üîÑ</span> Reconcile All Orders
        </button>
    </div>

    <div class="glass-card mb-4">
        <div class="filters-bar">
            <div class="filter-group">
                <label class="small opacity-75">From Date:</label>
                <input type="date" class="form-control-glass" @bind="FilterDate" />
            </div>
            <div class="filter-group">
                <label class="small opacity-75">Status:</label>
                <div class="d-flex gap-2">
                    @foreach (var status in AvailableStatuses)
                    {
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" id="status-@status" 
                                   checked="@SelectedStatuses.Contains(status)" 
                                   @onchange="@(e => ToggleStatus(status, e.Value))">
                            <label class="form-check-label small" for="status-@status">@status</label>
                        </div>
                    }
                </div>
            </div>
            <button class="btn-glass ms-auto" @onclick="ApplyFilters">Apply Filters</button>
            <button class="btn-glass" @onclick="ResetFilters">Reset</button>
        </div>
    </div>

    <div class="glass-card p-0 overflow-hidden">
        <table class="table table-dark table-hover mb-0">
            <thead>
                <tr>
                    <th>Order No</th>
                    <th>Date</th>
                    <th>Symbol</th>
                    <th>Side</th>
                    <th>Qty</th>
                    <th>Price</th>
                    <th>Status</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (OrderList == null)
                {
                    <tr><td colspan="8" class="text-center p-4">Loading orders...</td></tr>
                }
                else if (!OrderList.Any())
                {
                    <tr><td colspan="8" class="text-center p-4">No orders found matching filters.</td></tr>
                }
                else
                {
                    @foreach (var order in OrderList)
                    {
                        <tr>
                            <td>@order.OrderNo</td>
                            <td class="small">@(order.CreateDate?.ToString("yyyy-MM-dd HH:mm") ?? "N/A")</td>
                            <td class="fw-bold">@order.Symbol</td>
                            <td><span class="badge @(order.Side == "BUY" ? "bg-success" : "bg-danger")">@order.Side</span></td>
                            <td>@order.Quantity</td>
                            <td>@order.BasePrice.ToString("N2")</td>
                            <td><span class="status-badge status-@((order.OrderStatus ?? "UNKNOWN").ToLower().Replace(" ", "-"))">@order.OrderStatus</span></td>
                            <td class="text-end">
                                <button class="btn-glass py-1 px-2 me-1" @onclick="() => ViewDetails(order)">
                                    <span class="btn-icon">üîç</span> Details
                                </button>
                                <button class="btn-glass py-1 px-2" @onclick="() => ReconcileOrder(order)" title="Reconcile with Exchange">
                                    <span class="btn-icon">üîÑ</span>
                                </button>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>

        @if (TotalPages > 1)
        {
            <div class="pagination-container border-top">
                <div class="small opacity-75">Showing page @CurrentPage of @TotalPages (@TotalOrders total orders)</div>
                <div class="d-flex">
                    <button class="pagination-btn" disabled="@(CurrentPage == 1)" @onclick="() => GoToPage(CurrentPage - 1)">Prev</button>
                    @for (int i = 1; i <= TotalPages; i++)
                    {
                        var pageNum = i;
                        <button class="pagination-btn @(CurrentPage == pageNum ? "active" : "")" @onclick="() => GoToPage(pageNum)">@pageNum</button>
                    }
                    <button class="pagination-btn" disabled="@(CurrentPage == TotalPages)" @onclick="() => GoToPage(CurrentPage + 1)">Next</button>
                </div>
            </div>
        }
    </div>
</div>

@if (ShowDrawer && SelectedOrder != null)
{
    <div class="drawer-overlay" @onclick="CloseDrawer"></div>
    <div class="drawer @(ShowDrawer ? "open" : "")">
        <div class="drawer-header">
            <h3>Order Details - @SelectedOrder.OrderNumber</h3>
            <button class="btn-glass" @onclick="CloseDrawer">‚úï</button>
        </div>
        <div class="drawer-content">
            <div class="glass-card">
                <h4 class="mb-3 text-accent border-bottom pb-2">Order Information</h4>
                <div class="row g-3">
                    <div class="col-6">
                        <label class="small opacity-50 d-block">Order Number</label>
                        <span class="small">@(SelectedOrder.OrderNumber ?? "N/A")</span>
                    </div>
                    <div class="col-6">
                        <label class="small opacity-50 d-block">Exchange ID</label>
                        <span class="small">@(SelectedOrder.ExchangeOrderNumber ?? "N/A")</span>
                    </div>
                    <div class="col-6">
                        <label class="small opacity-50 d-block">Symbol</label>
                        <span>@SelectedOrder.Symbol</span>
                    </div>
                    <div class="col-6">
                        <label class="small opacity-50 d-block">Side</label>
                        <span class="badge @(SelectedOrder.Side == "BUY" ? "bg-success" : "bg-danger")">@SelectedOrder.Side</span>
                    </div>
                    <div class="col-6">
                        <label class="small opacity-50 d-block">Status</label>
                        <span class="status-badge status-@((SelectedOrder.OrderStatus ?? "UNKNOWN").ToLower().Replace(" ", "-"))">@SelectedOrder.OrderStatus</span>
                    </div>
                    <div class="col-6">
                        <label class="small opacity-50 d-block">Order Type</label>
                        <span>@(SelectedOrder.OrderAttribute ?? "N/A")</span>
                    </div>
                    <div class="col-6">
                        <label class="small opacity-50 d-block">Quantity</label>
                        <span>@SelectedOrder.Quantity</span>
                    </div>
                    <div class="col-6">
                        <label class="small opacity-50 d-block">Price</label>
                        <span>@SelectedOrder.BasePrice.ToString("N2")</span>
                    </div>
                    <div class="col-6">
                        <label class="small opacity-50 d-block">Time In Force</label>
                        <span>@(SelectedOrder.TimeInForce ?? "N/A")</span>
                    </div>
                    <div class="col-6">
                        <label class="small opacity-50 d-block">Order Capacity</label>
                        <span>@(SelectedOrder.OrderCapacity ?? "N/A")</span>
                    </div>
                    @if (!string.IsNullOrEmpty(SelectedOrder.ExpiryDate))
                    {
                        <div class="col-6">
                            <label class="small opacity-50 d-block">Expiry Date</label>
                            <span class="small">@SelectedOrder.ExpiryDate</span>
                        </div>
                    }
                    @if (SelectedOrder.MatchedPrice.HasValue && SelectedOrder.MatchedPrice.Value > 0)
                    {
                        <div class="col-6">
                            <label class="small opacity-50 d-block">Matched Price</label>
                            <span class="text-success">@SelectedOrder.MatchedPrice.Value.ToString("N2")</span>
                        </div>
                    }
                    @if (SelectedOrder.MatchedDate.HasValue)
                    {
                        <div class="col-6">
                            <label class="small opacity-50 d-block">Matched Date</label>
                            <span class="small text-success">@SelectedOrder.MatchedDate.Value.ToString("yyyy-MM-dd HH:mm:ss")</span>
                        </div>
                    }
                    @if (!string.IsNullOrEmpty(SelectedOrder.RejectionReason))
                    {
                        <div class="col-12">
                            <label class="small opacity-50 d-block">Rejection Reason</label>
                            <span class="text-danger small">@SelectedOrder.RejectionReason</span>
                        </div>
                    }
                    <div class="col-6">
                        <label class="small opacity-50 d-block">CDS Account</label>
                        <span class="small">@(SelectedOrder.CdsAccount ?? "N/A")</span>
                    </div>
                    <div class="col-6">
                        <label class="small opacity-50 d-block">Broker Code</label>
                        <span class="small">@(SelectedOrder.BrokerCode ?? "N/A")</span>
                    </div>
                    <div class="col-6">
                        <label class="small opacity-50 d-block">Created</label>
                        <span class="small">@(SelectedOrder.CreateDate?.ToString("yyyy-MM-dd HH:mm:ss") ?? "N/A")</span>
                    </div>
                    <div class="col-6">
                        <label class="small opacity-50 d-block">Trader</label>
                        <span class="small">@(SelectedOrder.Trader ?? "N/A")</span>
                    </div>
                </div>
            </div>

            @if (IsLoadingValidation)
            {
                <div class="glass-card text-center">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading exchange status...</span>
                    </div>
                    <p class="mt-2 mb-0 small">Fetching exchange status...</p>
                </div>
            }
            else if (ValidationResult != null)
            {
                <div class="glass-card">
                    <h4 class="mb-3 text-accent border-bottom pb-2">Exchange Validation</h4>
                    <div class="alert @(ValidationResult.IsValid ? "alert-success" : "alert-warning") mb-0">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <strong>@(ValidationResult.IsValid ? "‚úì Order Validated" : "‚ö† Discrepancies Found")</strong>
                            <span class="small">@DateTime.Now.ToString("HH:mm:ss")</span>
                        </div>
                        @if (!ValidationResult.IsValid)
                        {
                            <ul class="mb-0 small">
                                @foreach (var msg in ValidationResult.ValidationMessages)
                                {
                                    <li>@msg</li>
                                }
                            </ul>
                        }
                        @if (ValidationResult.ExchangeData != null)
                        {
                            <div class="mt-2 pt-2 border-top">
                                <div class="small opacity-75">Exchange Data:</div>
                                <div class="row g-2 mt-1">
                                    <div class="col-6">
                                        <span class="small opacity-50">Status:</span> @ValidationResult.ExchangeData.Status
                                    </div>
                                    <div class="col-6">
                                        <span class="small opacity-50">Qty:</span> @ValidationResult.ExchangeData.OriginalQty
                                    </div>
                                    <div class="col-6">
                                        <span class="small opacity-50">Filled:</span> @ValidationResult.ExchangeData.FilledQty
                                    </div>
                                    <div class="col-6">
                                        <span class="small opacity-50">Remaining:</span> @ValidationResult.ExchangeData.RemainingQty
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }

            <div class="glass-card">
                <h4 class="mb-3 text-accent border-bottom pb-2">Audit History</h4>
                <div class="fix-log" style="height: auto; max-height: 300px;">
                    @if (OrderHistory == null)
                    {
                        <div class="small opacity-50">Loading history...</div>
                    }
                    else if (!OrderHistory.Any())
                    {
                        <div class="small opacity-50">No history available.</div>
                    }
                    else
                    {
                        @foreach (var entry in OrderHistory)
                        {
                            <div class="log-entry border-bottom border-secondary pb-2 mb-2">
                                <div class="d-flex justify-content-between small">
                                    <span class="text-accent">@entry.Timestamp.ToString("yyyy-MM-dd HH:mm:ss")</span>
                                    <span class="badge bg-secondary">@entry.Status</span>
                                </div>
                                <div class="mt-1">@entry.Message</div>
                                <div class="small opacity-50">Qty: @entry.Quantity | Price: @entry.Price.ToString("N2")</div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
}

@code {
    private IEnumerable<PreOrderLive>? OrderList;
    private int CurrentPage = 1;
    private int PageSize = 10;
    private int TotalOrders = 0;
    private int TotalPages => (int)Math.Ceiling((double)TotalOrders / PageSize);

    private DateTime FilterDate = DateTime.Now.AddDays(-7);
    private string[] AvailableStatuses = new[] { "OPEN", "NEW", "MATCHED ORDER", "REJECTED", "CANCELLED" };
    private List<string> SelectedStatuses = new List<string> { "OPEN", "NEW" };

    private bool ShowDrawer = false;
    private PreOrderLive? SelectedOrder;
    private IEnumerable<OrderHistoryEntry>? OrderHistory;
    private OrderValidationResult? ValidationResult;
    private bool IsLoadingValidation = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadOrders();
    }

    private async Task LoadOrders()
    {
        OrderList = await OrderService.GetOrdersAsync(CurrentPage, PageSize, FilterDate, SelectedStatuses.ToArray());
        TotalOrders = await OrderService.GetOrderCountAsync(FilterDate, SelectedStatuses.ToArray());
    }

    private void ToggleStatus(string status, object? isChecked)
    {
        if (isChecked is bool cb && cb)
        {
            if (!SelectedStatuses.Contains(status)) SelectedStatuses.Add(status);
        }
        else
        {
            SelectedStatuses.Remove(status);
        }
    }

    private async Task ApplyFilters()
    {
        CurrentPage = 1;
        await LoadOrders();
    }

    private async Task ResetFilters()
    {
        FilterDate = DateTime.Now.AddDays(-7);
        SelectedStatuses = new List<string> { "OPEN", "NEW" };
        CurrentPage = 1;
        await LoadOrders();
    }

    private async Task GoToPage(int page)
    {
        CurrentPage = page;
        await LoadOrders();
    }

    private async Task ViewDetails(PreOrderLive order)
    {
        SelectedOrder = order;
        ShowDrawer = true;
        OrderHistory = null;
        StateHasChanged();
        if (!string.IsNullOrEmpty(order.OrderNumber))
        {
            OrderHistory = await ReconService.GetOrderHistoryAsync(order.OrderNumber);
        }
    }

    private void CloseDrawer()
    {
        ShowDrawer = false;
    }

    private async Task ReconcileAll()
    {
        await ReconService.ReconcileOrdersWithSttApiAsync();
        await LoadOrders();
    }

    private async Task ReconcileOrder(PreOrderLive order)
    {
        if (!string.IsNullOrEmpty(order.OrderNumber))
        {
            await ReconService.ReconcileSpecificOrderAsync(order.OrderNumber);
            await LoadOrders();
        }
    }

    private async Task ReconcileSelectedOrder()
    {
        await AutoFetchExchangeStatus();
    }

    private async Task AutoFetchExchangeStatus()
    {
        if (SelectedOrder == null || string.IsNullOrEmpty(SelectedOrder.ExchangeOrderNumber))
        {
            return;
        }

        try
        {
            IsLoadingValidation = true;
            StateHasChanged();

            // Use ExchangeOrderNumber (exchange_orderNumber field) for lookup
            ValidationResult = await ReconService.ValidateOrderWithExchangeAsync(SelectedOrder.ExchangeOrderNumber);
        }
        catch (Exception ex)
        {
            // Handle error silently or log it
            ValidationResult = new OrderValidationResult
            {
                IsValid = false,
                ValidationMessages = new List<string> { $"Failed to fetch exchange status: {ex.Message}" }
            };
        }
        finally
        {
            IsLoadingValidation = false;
            StateHasChanged();
        }
    }
}
