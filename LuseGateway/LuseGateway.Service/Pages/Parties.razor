@page "/parties"
@using LuseGateway.Core.Models
@using LuseGateway.Core.Services
@using LuseGateway.Service.Services
@using Microsoft.AspNetCore.SignalR.Client
@implements IAsyncDisposable
@inject IPartyService PartyService
@inject IFixActionService FixActionService
@inject NavigationManager Navigation

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h2 mb-0">Party Details Sync</h1>
            <p class="text-secondary small mb-0">Request and synchronize broker/trader details from LUSE</p>
        </div>
        <div class="d-flex gap-2">
            <button class="btn btn-primary" @onclick="RequestParties" disabled="@IsLoading">
                @if (IsLoading)
                {
                    <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                }
                ‚ö° Request from Exchange
            </button>
            <button class="btn btn-success" @onclick="SyncToDatabase" disabled="@(!TemporaryParties.Any() || IsLoading)">
                üìÅ Sync to Database (@TemporaryParties.Count())
            </button>
            <button class="btn btn-outline-secondary" @onclick="ClearTemp">
                üóëÔ∏è Clear Preview
            </button>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Message))
    {
        <div class="alert @(IsError ? "alert-danger" : "alert-success") alert-dismissible fade show" role="alert">
            @Message
            <button type="button" class="btn-close" @onclick="() => Message = null"></button>
        </div>
    }

    <div class="glass-card mt-3">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead>
                    <tr>
                        <th>Symbol/ID</th>
                        <th>Name</th>
                        <th>Full Name</th>
                        <th>Exchange</th>
                        <th>Type</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!TemporaryParties.Any())
                    {
                        <tr>
                            <td colspan="6" class="text-center p-5 opacity-50">
                                <span class="d-block h4 mb-2">No data to preview</span>
                                <p class="mb-0">Click "Request from Exchange" to fetch party details via FIX.</p>
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var party in TemporaryParties)
                        {
                            <tr>
                                <td class="fw-bold">@party.Symbol</td>
                                <td>@party.Company</td>
                                <td class="small">@party.Fnam</td>
                                <td><span class="badge bg-dark">@party.Exchange</span></td>
                                <td><span class="badge bg-secondary">@party.SecurityType</span></td>
                                <td><span class="badge bg-info">PENDING SYNC</span></td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@code {
    private List<ParaCompany> TemporaryParties = new();
    private bool IsLoading = false;
    private string? Message;
    private bool IsError = false;
    private HubConnection? hubConnection;

    protected override async Task OnInitializedAsync()
    {
        LoadParties();

        hubConnection = new HubConnectionBuilder()
            .WithUrl(Navigation.ToAbsoluteUri("/gatewayHub"))
            .Build();

        hubConnection.On("PartiesUpdated", () =>
        {
            InvokeAsync(() =>
            {
                LoadParties();
                IsLoading = false;
                Message = "Party details received from exchange.";
                IsError = false;
                StateHasChanged();
            });
        });

        await hubConnection.StartAsync();
    }

    private void LoadParties()
    {
        TemporaryParties = PartyService.GetTemporaryParties().ToList();
    }

    private async Task RequestParties()
    {
        try
        {
            IsLoading = true;
            Message = "Requesting party details via FIX...";
            IsError = false;
            await FixActionService.RequestPartyIDsAsync();
            // We wait for SignalR notification
        }
        catch (Exception ex)
        {
            Message = "Error requesting parties: " + ex.Message;
            IsError = true;
            IsLoading = false;
        }
    }

    private async Task SyncToDatabase()
    {
        try
        {
            IsLoading = true;
            await PartyService.SyncPartiesToDatabaseAsync();
            LoadParties();
            Message = "Successfully synchronized parties to database.";
            IsError = false;
        }
        catch (Exception ex)
        {
            Message = "Error syncing to database: " + ex.Message;
            IsError = true;
        }
        finally
        {
            IsLoading = false;
        }
    }

    private void ClearTemp()
    {
        PartyService.ClearTemporaryParties();
        LoadParties();
        Message = "Preview cleared.";
        IsError = false;
    }

    public async ValueTask DisposeAsync()
    {
        if (hubConnection is not null)
        {
            await hubConnection.DisposeAsync();
        }
    }
}
